    setdocktype=1
    setpartialstrut=1
    usefontcolor=1
    fontcolor=#ffffff
    usefontsize=0
    fontsize=12
    background=1
    backgroundfile=/usr/share/lxpanel/images/background.png
    iconsize=50
}

